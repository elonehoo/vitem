{
  "extends": "@elonehoo",
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "paths": ["path"]
      }
    ]
  },
  "overrides": [
    {
      "files": "packages/**/*.*",
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": ["core", "path"]
          }
        ]
      }
    },
    {
      "files": "packages/core/**/*.*",
      "rules": {
        "no-restricted-globals": [
          "error",
          "setTimeout",
          "clearTimeout",
          "setInterval",
          "clearInterval",
          "performance"
        ]
      }
    }
  ]
}
